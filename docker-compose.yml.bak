# Compose V2 (version 키 생략)

services:
  # 1) Django API (Gunicorn)
  api:
    build:
      context: .
      dockerfile: Dockerfile
    image: team2/api:dev
    container_name: team2_web
    # env_file: .env.prod                  # ← 파일 없으면 주석 유지
    environment:
      IN_DOCKER: "1"
      DJANGO_SETTINGS_MODULE: team2_final.settings
      DJANGO_TIME_ZONE: "${TIME_ZONE:-Asia/Seoul}"
      DJANGO_DEBUG: "${DJANGO_DEBUG:-False}"
      GUNICORN_CMD_ARGS: >
        --bind=0.0.0.0:8000
        --workers=2
        --threads=2
        --timeout=60
        --keep-alive=15
        --chdir=/app
        --access-logfile=-
    command: >
      bash -lc "
        python manage.py migrate --noinput &&
        python manage.py collectstatic --noinput &&
        exec gunicorn team2_final.wsgi:application
      "
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://127.0.0.1:8000/healthz || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 6
      start_period: 45s
    restart: unless-stopped

  # 2) Nginx 프록시
  nginx:
    image: nginx:1.27
    container_name: team2_nginx
    depends_on:
      api:
        condition: service_healthy
    ports:
      - "80:80"
    volumes:
      - ./deploy/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./deploy/nginx/conf.d:/etc/nginx/conf.d:ro
    healthcheck:
      test: ["CMD-SHELL", "curl -fsS http://127.0.0.1/healthz || wget -qO- http://127.0.0.1/healthz >/dev/null || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 6
      start_period: 10s
    restart: unless-stopped

  # 3) Prometheus (모니터링 수집기)
  prometheus:
    image: prom/prometheus:latest
    container_name: team2_final_prom
    ports:
      - "9090:9090"
    command:
      - --config.file=/etc/prometheus/prometheus.yml
      - --storage.tsdb.path=/prometheus
      - --web.enable-lifecycle
      - --enable-feature=remote-write-receiver   # ← remote write 수신 활성화
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml:ro   # 루트의 prometheus.yml 사용
      - ./prometheus/rules:/etc/prometheus/rules:ro
      - prometheus-data:/prometheus
    restart: unless-stopped

  # 4) Alertmanager
  alertmanager:
    image: prom/alertmanager:v0.28.1
    container_name: alertmanager
    # env_file: .env.prod                  # ← 파일 없으면 주석 유지
    command:
      - "--config.file=/etc/alertmanager/alertmanager.yml"
      - "--storage.path=/alertmanager"
    volumes:
      - ./alertmanager/alertmanager.yml:/etc/alertmanager/alertmanager.yml:ro
      - ./alertmanager/secrets/slack_webhook:/run/secrets/slack_webhook:ro
      - alertmanager-data:/alertmanager
    ports:
      - "9093:9093"
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://127.0.0.1:9093/-/ready >/dev/null || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 6
      start_period: 10s
    restart: unless-stopped

  # 5) Grafana (시각화)
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    ports:
      - "3000:3000"
    environment:
      GF_SECURITY_ADMIN_USER: admin
      GF_SECURITY_ADMIN_PASSWORD: 'StrongPass!1'
      GF_USERS_ALLOW_SIGN_UP: "false"
    volumes:
      - grafana-data:/var/lib/grafana
    depends_on:
      - prometheus
    restart: unless-stopped

  # 6) Blackbox Exporter
  blackbox:
    image: prom/blackbox-exporter:latest
    container_name: blackbox
    ports:
      - "9115:9115"
    volumes:
      - ./blackbox.yml:/etc/blackbox_exporter/config.yml:ro
    restart: unless-stopped

  # 7) Node Exporter (호스트 리소스)
  node_exporter:
    image: prom/node-exporter:latest
    container_name: node_exporter
    command:
      - '--path.rootfs=/host'
      - '--path.procfs=/host/proc'
      - '--path.sysfs=/host/sys'
    volumes:
      - '/:/host:ro,rslave'
      - '/proc:/host/proc:ro'
      - '/sys:/host/sys:ro'
    expose:
      - "9100"
    restart: unless-stopped

  # 8) cAdvisor (컨테이너 리소스)
  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: cadvisor
    volumes:
      - '/:/rootfs:ro'
      - '/var/run:/var/run:ro'
      - '/sys:/sys:ro'
      - '/var/lib/docker/:/var/lib/docker:ro'
    expose:
      - "8080"
    restart: unless-stopped

# Top-level named volumes (services 바깥)
volumes:
  grafana-data:
  alertmanager-data:
  prometheus-data:
